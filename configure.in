AC_INIT(src/main.c)
AM_CONFIG_HEADER(config.h)
AM_INIT_AUTOMAKE(grisbi,0.4.1)
AM_ACLOCAL_INCLUDE(macros)

PACKAGE=grisbi
VERSION=0.4.1
dnl MKINSTALLDIRS
dnl AC_DEFINE_UNQUOTED(PACKAGE, "$PACKAGE")
dnl AC_DEFINE_UNQUOTED(VERSION, "$VERSION")
AC_SUBST(PACKAGE)
AC_SUBST(VERSION)

AC_ISC_POSIX
AC_PROG_CC
AC_STDC_HEADERS
AC_PROG_RANLIB

dnl Check for NLS support.                                                      
ALL_LINGUAS="en es"
AM_GNU_GETTEXT
AC_CHECK_LIB(intl,main)

GNOME_INIT

GNOME_COMPILE_WARNINGS
GNOME_X_CHECKS
GNOME_XML_CHECK

AC_SUBST(prefix)

AC_SUBST(EXTRA_GNOME_LIBS)
AC_SUBST(EXTRA_GNOME_CFLAGS)

GNOME_CHECK_MODULES(GNOMELIBS, [ gnome gtk glib xml gdk_pixbuf print ])
CFLAGS="$CFLAGS $GNOMELIBS_CFLAGS"
LDFLAGS="$LDFLAGS $GNOMELIBS_LIBS"


AC_SUBST(CFLAGS)
AC_SUBST(LDFLAGS)

AC_DEFINE_UNQUOTED(APPLET_BIN_DIR, "$acl_final_exec_prefix/bin/grisbi_applet", APPLET_BIN_DIR)
AC_DEFINE_UNQUOTED(GRISBI_BIN_DIR, "$acl_final_exec_prefix/bin/grisbi", GRISBI_BIN_DIR)
AC_DEFINE_UNQUOTED(CHEMIN_LOGO, "$acl_final_prefix/share/pixmaps/logo_grisbi.xpm", CHEMIN_LOGO)

dnl ******************************
dnl Makefiles
dnl ******************************

AC_OUTPUT([
Makefile
po/Makefile.in
intl/Makefile
src/Makefile
macros/Makefile
])
