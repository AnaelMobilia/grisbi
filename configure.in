AC_INIT(src/main.c)
AM_CONFIG_HEADER(config.h)
AM_INIT_AUTOMAKE(grisbi,0.4.1)
AM_ACLOCAL_INCLUDE(macros)

AM_MAINTAINER_MODE()

PACKAGE=grisbi
VERSION=0.4.1
dnl MKINSTALLDIRS
dnl AC_DEFINE_UNQUOTED(PACKAGE, "$PACKAGE")
dnl AC_DEFINE_UNQUOTED(VERSION, "$VERSION")
AC_SUBST(PACKAGE)
AC_SUBST(VERSION)

AC_ISC_POSIX
AC_PROG_CC
AC_STDC_HEADERS
AC_PROG_RANLIB

dnl Check for NLS support.                                                      
ALL_LINGUAS="fr"
AM_GNU_GETTEXT
AC_CHECK_LIB(intl,main)

GNOME_INIT

GNOME_COMPILE_WARNINGS
GNOME_X_CHECKS
GNOME_XML_CHECK


AC_SUBST(EXTRA_GNOME_LIBS)
AC_SUBST(EXTRA_GNOME_CFLAGS)

GNOME_CHECK_MODULES(GNOMELIBS, [ gnome gtk glib xml gdk_pixbuf print ])
CFLAGS="$CFLAGS $GNOMELIBS_CFLAGS"
LDFLAGS="$LDFLAGS $GNOMELIBS_LIBS"


AC_SUBST(CFLAGS)
AC_SUBST(LDFLAGS)

AC_SUBST(prefix)

dnl ******************************
dnl Makefiles
dnl ******************************

AC_OUTPUT([
Makefile
po/Makefile.in
intl/Makefile
src/Makefile
macros/Makefile
help/Makefile
help/C/Makefile
help/fr/Makefile
])
